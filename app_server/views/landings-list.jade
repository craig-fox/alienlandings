include _includes/sharedHTMLfunctions

extends layout

block content
    #banner.page-header
        .row
            .col-lg-6
                h1= pageHeader.title
                small &nbsp;#{pageHeader.strapline}
    .row
        .col-xs-12.col-sm-8
            .row.list-group
                each landing in landings
                    .col-xs-12.list-group-item
                        h4
                            a(href="/landing")= landing.name
                            small &nbsp;
                                +credRating(landing.credibility)
                            span.badge.pull-right.badge-default #{landing.distance} &nbsp;

                        h5
                           small Discovered &nbsp;
                           time(style="color:black;") #{landing.discoveredAt} &nbsp;
                           span(style="color:black;") at &nbsp;
                            span.small.location(style="color:black;")= landing.location
                        p
                            each rumor in landing.rumors
                                span.label.label-warning #{rumor} &nbsp;


