extends layout

block content
    .row.page-header
        .col-lg-12
            h1= title
    .row
        .col-xs-12.col-md-6
            form.form-horizontal(action="/landing", method="get", role="form")
                .form-group
                    label.col-xs-10.col-sm-2.control-label(for="name") Name
                    .col-xs-12.col-sm-10
                        input#name.form-control(name="name")
                .form-group
                    label.col-sm-2.control-label(for="quote") Quote
                    .col-sm-10
                        textarea#quote.form-control(name="quote")
                .form-group
                    .col-sm-12
                        input#meninblack(type="checkbox",name="mib")
                        = " Please check this box if the Men In Black have visited you"
                button.btn.btn-default.pull-right Add my quote